export FZF_CTRL_T_COMMAND=$FZF_DEFAULT_COMMAND
export FZF_DEFAULT_OPTS='--height 80% --layout=reverse --border --color=dark'
alias fp="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"
